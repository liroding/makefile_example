CC = gcc
CFLAG = -Wall
TARGET =main

SRCS = $(wildcard *.c)
SRCS += $(wildcard app1/*.c)
SRCS += $(wildcard app2/*.c)

     
INCLUDES = $(wildcard *.h)
INCLUDES += $(wildcard app1/*.h)
INCLUDES += $(wildcard app2/*.h)



OBJS = $(SRCS:.c=.o)
all:$(OBJS)
	$(CC) $(LDFLAG) -o $(TARGET) $^

%.o: $(SRCS)
	$(CC) -c $^ -o $(OBJS)

clean:
	rm -rf $(basename $(TARGET)) $(SRCS:.c=.o)




